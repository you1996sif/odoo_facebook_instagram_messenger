<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-inherit="mail.Discuss" t-inherit-mode="extension">
        <xpath expr="//div[hasclass('o_Discuss_content')]" position="inside">
            <div class="o_DiscussSalesPanel" t-if="messaging.discuss.thread and messaging.discuss.thread.channel_type === 'chat'">
                <t t-call="mail.PartnerSalesPanel"/>
            </div>
        </xpath>
    </t>
</templates>