<templates xml:space="preserve">
    <t t-name="discuss.thread" t-inherit="mail.DiscussThread" t-inherit-mode="extension" owl="1">
        <xpath expr="//div[hasclass('o-mail-Thread')]" position="inside">
            <div class="d-flex justify-content-between align-items-center p-2">
                <button class="btn btn-link" t-on-click="loadSaleOrders">
                    <i class="fa fa-shopping-cart"/> View Sales
                </button>
            </div>
            <div t-if="showSales" class="p-3">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Order</th>
                            <th>Date</th>
                            <th>Amount</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-foreach="saleOrders" t-as="sale">
                            <tr>
                                <td><t t-esc="sale.name"/></td>
                                <td><t t-esc="sale.date"/></td>
                                <td><t t-esc="sale.amount"/></td>
                                <td><t t-esc="sale.state"/></td>
                            </tr>
                        </t>
                    </tbody>
                </table>
            </div>
        </xpath>
    </t>
</templates>