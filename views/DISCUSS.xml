<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_discuss_sales_combined" model="ir.ui.view">
        <field name="name">discuss.sales.combined</field>
        <field name="model">discuss.channel</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <!-- Chat Messages Section -->
                    <div class="chat-section">
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                    <!-- Sales Orders Section -->
                    <div class="sales-section">
                        <field name="sale_order_ids">
                            <tree>
                                <field name="name"/>
                                <field name="date_order"/>
                                <field name="amount_total"/>
                                <field name="state"/>
                            </tree>
                        </field>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_discuss_sales_combined" model="ir.actions.act_window">
        <field name="name">Messages and Sales</field>
        <field name="res_model">discuss.channel</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_discuss_sales_combined"/>
    </record>

    <!-- Menu Item -->
    <menuitem id="menu_discuss_sales_combined"
        name="Messages and Sales"
        action="action_discuss_sales_combined"
        
        parent="mail.menu_root_discuss"
         sequence="25"/>
</odoo>